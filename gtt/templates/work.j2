{% extends "layout_with_content.j2" %}
{% block title %}{{ work.name }}{% endblock %}
{% block submenu_items %}
{% if user.can_manage_works %}
<li class="pure-menu-item"><a href={{ url_for('edit_work', work_id=work.id) }} class="pure-menu-link">Edit Work</a></li>
<li class="pure-menu-item"><a href={{ url_for('new_work') }} class="pure-menu-link">New Work</a></li>
{% endif %}
{% endblock %}
{% block content %}
<h2>Techniques to play</h2>
<table class="pure-table">
    <tbody>
    {% for technique in work.techniques() %}
        <tr>
            <td><a href="{{ url_for("view_technique", technique_id=technique.id) }}">{{technique.name}}</a></td>
        </tr>
    {% endfor %}
    </tbody>
</table>
<h2>Streams</h2>
<h2>Sheet music</h2>
{% endblock %}